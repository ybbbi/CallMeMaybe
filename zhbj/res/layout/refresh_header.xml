<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/refresh_ll_root"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/refresh_ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
    	<RelativeLayout 
    	    android:layout_width="70dp"
    	    android:layout_height="70dp"
    	    
    	    >
    	    <ImageView 
    	        android:id="@+id/refresh_iv_arrow"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerInParent="true"
    	        android:src="@drawable/common_listview_headview_red_arrow"
    	        
    	        />
    	    <ProgressBar 
    	        android:id="@+id/refresh_pb_loading"
    	        android:layout_width="30dp"
    	        android:layout_height="30dp"
    	        android:indeterminateDrawable="@drawable/progressbar_style"
    	        android:layout_centerInParent="true"
    	        android:visibility="gone"
    	        />
    	    
    	</RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        
        
        
        >
        <TextView 
            android:layout_gravity="center_horizontal"
            android:id="@+id/refresh_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:textColor="#88FF0000"
            
            />

        <TextView
            android:id="@+id/refresh_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2019-09-09 11:00:00"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>