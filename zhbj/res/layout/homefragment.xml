<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.ybbbi.zhbj.ui.NoScrollviewpager
        android:id="@+id/homefragment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_radioGroup" >
    </com.ybbbi.zhbj.ui.NoScrollviewpager>

    <RadioGroup
        android:id="@+id/fragment_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_radio_first"
            style="@style/HomeFragmentRadioButtonStyle"
            android:button="@null"
            android:drawableTop="@drawable/home_selector_fragment"
            android:text="首页" />

        <RadioButton
            android:id="@+id/home_radio_news"
            style="@style/HomeFragmentRadioButtonStyle"
            android:drawableTop="@drawable/home_selector_fragment_newcenter"
            android:text="新闻中心"
            android:textColor="@color/home_selector_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_service"
            style="@style/HomeFragmentRadioButtonStyle"
            android:drawableTop="@drawable/home_selector_fragment_smartservice"
            android:text="智慧服务"
            android:textColor="@color/home_selector_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_gov"
            style="@style/HomeFragmentRadioButtonStyle"
            android:drawableTop="@drawable/home_selector_fragment_gov"
            android:text="政务"
            android:textColor="@color/home_selector_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_setting"
            style="@style/HomeFragmentRadioButtonStyle"
            android:drawableTop="@drawable/home_selector_fragment_setting"
            android:text="设置"
            android:textColor="@color/home_selector_textcolor" />
    </RadioGroup>

</RelativeLayout>