<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
       
        android:id="@+id/myprogressbar_tv_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:text="内存:"
        android:textSize="20dp"
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/myprogressbar_tv_memory" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressDrawable="@drawable/progressdrawable_horizontal" 
            
            />
        

        <TextView
             android:textSize="20dp"
            android:id="@+id/myprogressbar_tv_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已用0.00MB"
            android:textColor="#000000" 
            android:layout_centerVertical="true"/>

        <TextView
             android:textSize="20dp"
            android:id="@+id/myprogressbar_tv_useless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="3dp"
            android:text="剩余0.00MB"
            android:textColor="#000000"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>