<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4400FF00"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加黑名单"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/unlock_imageview"
        android:layout_width="80dp	"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/unlock_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="默认"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/unlock_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
        
        
    <Button
        android:layout_margin="8dp"
        android:background="@drawable/selector_home_dialog_password_confirm"
        android:id="@+id/unlock_button_confirm"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
     <Button
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/selector_home_dialog_password_confirm"
        android:id="@+id/unlock_button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="取消"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
    
    </LinearLayout>

</LinearLayout>