<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/submenu_enter</item>
        <item name="android:windowExitAnimation">@anim/submenu_exit</item>
    </style>
  <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>
    
    
    
    <style name="AddressDialogStyle">
        <item name="android:windowEnterAnimation">@anim/input_method_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_exit</item>
    </style>

    <style name="AddressStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AddressDialogStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Setting_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!--
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/next"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/selector_home_dialog_password_confirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
    -->

    <style name="Setting_Button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_home_dialog_password_confirm</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:onClick">next</item>
    </style>

    <style name="Setting_Button_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/pre</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_home_dialog_password_confirm</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:onClick">previous</item>
    </style>

    <style name="set_title_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableLeft">@drawable/dialog_title_default_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="APPTitleStyles">

        <!--
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_background"
        
        android:gravity="center"
        -->
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/setting_background</item>
        <item name="android:gravity">center</item>
    </style>

</resources>